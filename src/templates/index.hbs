---
data: posts.json
---
{{> header}}
<div class="min-h-screen bg-white">

  <div class="py-10">
    <header>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {{> nav page="home"}}
      </div>
    </header>

    <main>
      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="px-4 py-8 sm:px-0">
          <div class="border-4 border-dashed border-gray-200 rounded-lg">
            <h1 class="text-3xl font-bold leading-tight text-gray-900 m-5">
              <span class="label-sp">Posts</span>
            </h1>
            {{#each rows}}
              <div class="p-5 border-4 border-dashed border-gray-200 rounded-lg m-5">
                <a class="text-blue-500" href="/posts/{{post_id}}">{{sample_link_decorator name}}</a>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
{{> footer}}

